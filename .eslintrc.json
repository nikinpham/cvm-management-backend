{
    "env": {
        "browser": true,
        "es2021": true,
				"node": true,
				"es6": true
    },
    "extends": [
        "google",
				"plugin:@typescript-eslint/recommended",
				"prettier/@typescript-eslint",
				"plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
			"no-var": "error",
			"semi": "error",
			"indent": ["error", "tab"],
			"no-multiple-empty-lines": "error",
			"no-multi-spaces" :"error",
			"space-in-parens": "error",
			"prefer-const": "error"
    }
}
